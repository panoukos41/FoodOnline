@using FoodOnline.Domain.Stores.Catalogue

<div class="d-flex m-1">
    <div style="max-width:160px">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" style="width: 70px">Name</span>
            </div>
            <input type="text" class="form-control" @bind-value="ItemEntry.Name" />
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" style="width: 70px">Price</span>
            </div>
            <input type="number" step="0.01" class="form-control" @bind-value="ItemEntry.PriceEur" />
        </div>
    </div>
    <button class="btn btn-secondary mx-1" type="button" @onclick="() => OnRemoveItemEntry.InvokeAsync(ItemEntry)">X</button>
</div>

@code{
    [Parameter]
    public MenuItemEntry ItemEntry { get; set; }

    [Parameter]
    public EventCallback<MenuItemEntry> OnRemoveItemEntry { get; set; }
}